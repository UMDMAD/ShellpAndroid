<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary500</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/primary700</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary500</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/primary700</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>
    </style>

</resources>
